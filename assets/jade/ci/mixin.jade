mixin columnistas-list(foto_col,nombre,noticia)
            .col-md-4
                img.img-responsive.img-thumbnail(src=foto_col)
                h4=nombre
                h5=noticia
mixin noticias-peru(titulo,img_not,info,sub_t)
    ul.list-unstyled
        li 
            h5=titulo
            img.img-responsive(src=img_not)
            h6=info
            h5=sub_t
mixin ultimas-noticias-Emma(hora,titulo,img_ult,descrip,icon,msg,tema)
    ul.list-unstyled
        li 
            p=hora
            h3=tiulo
    .row
        .col-md-5
            img.img-responsive(src=img_ult)
        .col-md-7
            h5=descrip
            ul.list-unstyled.list-inline.ib
                li
                    img.ib.img-responsive(src=icon)
                    img.ib(src=msg)
                    p.ib.small=tema
                    img(src=msg)
